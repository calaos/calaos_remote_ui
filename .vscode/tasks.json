{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create_build_folder",
            "type": "shell",
            "command": "mkdir -p build_linux",
            "group": "build",
        },
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}/build_linux.sh",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "create_build_folder",
            ],
        }
    ]
}